{
  "name": "nethermind-creation-update-disable-detection-bot",
  "displayName": "Nethermind Creation, Update, Disable Detection Bot",
  "version": "0.0.1",
  "description": "Bot that detects Nethermind's bot interactions to the Forta Agent Registry on Polygon.",
  "longDescription": "This Forta bot monitors specific function calls made by the known Nethermind `Deployer address`. It watches transactions for `Create Agent`, `Update Agent`, and `Disable Agent` function calls directed to the `Forta Agent Registry` on Polygon.",
  "repository": "https://github.com/Nailujj/Forta_bot_deployment",
  "licenseUrl": "https://github.com/forta-network/forta-bot-sdk/blob/master/starter-project/LICENSE.md",
  "promoUrl": "https://forta.org",
  "main": "dist/index.js",
  "chainIds": [137],
  "scripts": {
    "build": "tsc",
    "start": "npm run start:dev",
    "start:dev": "nodemon --watch src --watch forta.config.json -e js,ts,json  --exec \"npm run build && forta-agent run\"",
    "start:prod": "forta-agent run --prod",
    "tx": "npm run build && forta-agent run --tx",
    "block": "npm run build && forta-agent run --block",
    "range": "npm run build && forta-agent run --range",
    "alert": "npm run build && forta-agent run --alert",
    "sequence": "npm run build && forta-agent run --sequence",
    "file": "npm run build && forta-agent run --file",
    "publish": "forta-agent publish",
    "info": "forta-agent info",
    "logs": "forta-agent logs",
    "push": "forta-agent push",
    "disable": "forta-agent disable",
    "enable": "forta-agent enable",
    "keyfile": "forta-agent keyfile",
    "stake": "forta-agent stake",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "forta-agent": "^0.1.48"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/nodemon": "^1.19.0",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "nodemon": "^2.0.8",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^4.3.4",
    "forta-agent-tools": "^3.2.12"
  }
}
